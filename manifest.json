{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "RaterFox - Popular Movies & TV Shows",
  "short_name":  "RaterFox",
  "description": "The most popular movies and TV shows in your default tab. Includes ratings, summaries and the ability to watch trailers.",
  "version": "1.2.2",
  "author": "Jake Prins",
  "icons": { "128": "rf-app-icon.png" },

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

  "chrome_url_overrides" : {
    "newtab": "newtab.html"
  },

  "browser_action": {
    "default_icon": "rf-tab-icon.png",
    "default_popup": "popup.html",
    "default_title": "RaterFox"
  },
  "permissions": [
    "activeTab"
  ]
}
