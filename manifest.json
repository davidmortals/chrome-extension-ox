{
  "manifest_version": 2,
  "name": "Open and close link",
  "short_name": "openCloseLink",
  "description": "Open target link in new tab and close it on success",
  "version": "0.0.1",
  "author": "David Mortals",
  "minimum_chrome_version": "38",
  "permissions": [
    "contextMenus", 
    "tabs"],
  "icons": {
    "16": "assets/icon-bitty.png",
    "48": "assets/icon-small.png",
    "128": "assets/icon-large.png"
  },
  "background": {"page": "background.html"}
}
